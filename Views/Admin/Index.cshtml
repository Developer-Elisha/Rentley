
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Admin_Nav.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-6 col-xl-6">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-store fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">Total Vendor</p>
                    <h6 class="mb-0">@ViewBag.TotalVendors</h6>
                </div> 
            </div>
        </div>
        <div class="col-sm-6 col-xl-6">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-user fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">Total Renters</p>
                    <h6 class="mb-0">@ViewBag.TotalUsers</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-6">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-tag fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">Total Products</p>
                    <h6 class="mb-0">@ViewBag.TotalProds</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-6">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-list-alt fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">Total Categories</p>
                    <h6 class="mb-0">@ViewBag.TotalCategories</h6>
                </div>
            </div>
        </div>
    </div>
</div>

