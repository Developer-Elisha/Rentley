@model Rentley.Models.category

@{
    ViewData["Title"] = "add_category";
    Layout = "~/Views/Shared/Admin_Nav.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="container">
        <div class="col-lg-12" style="background-color: #303030;">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 mb-4" style="color: #fff;">Add Categories</h1>
                        </div>

        <form asp-action="add_category">
            
                    <center>
            <div class="form-group">
                            <input asp-for="Category_Name" class="form-control" style="background-color: #464646; border: none; color: #fff; width: 70%;" />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
                    <br />
                    <br />
            
                        <div class="form-group">
                            <input type="submit" value="Add" class="btn " style="background-color: #CAE943; color: #222; font-size: 1.3vw; font-weight: 700; width: 70%;" />
                        </div>
            </center>
        </form>
            </div>
        </div>
    </div>
</div>
